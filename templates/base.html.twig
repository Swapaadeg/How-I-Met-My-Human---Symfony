<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}How I Met My Human{% endblock %}</title>
        <link rel="icon" href="{{ asset('favicon.ico') }}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    
        <header class="main-header">
            <nav class="navbar">
                <div class="logo-section">
                    <div class="logo">
                        <a href="{{ path('home') }}">
                            <img src="{{ asset('logo.png') }}" alt="How I Met My Human Logo">
                        </a>
                    </div>
                </div>

                <ul class="nav-links">
                    <li><a href="{{ path('animals') }}">Nos rescapés</a></li>
                    <li><a href="{{ path('associations') }}">Les associations</a></li>
                </ul>

                <div class="auth-section">
                    {# Menu accès rapide (desktop + mobile) #}
                    {% if is_granted('ROLE_USER') %}
                        <div class="action-menu-wrapper">
                            <button class="action-menu-toggle" id="actionMenuToggle" aria-label="Accès rapide">
                                <i class="fas fa-tasks"></i>
                                <span class="action-label">Accès rapide</span>
                            </button>
                            <div class="action-menu" id="actionMenu">
                                {% if is_granted('ROLE_ADMIN') %}
                                    {# Admin menu #}
                                    <a href="{{ path('admin') }}" class="action-link admin-link" target="_blank">
                                        <i class="fas fa-cog"></i> Panel Admin
                                    </a>
                                    <a href="{{ path('animals_add') }}" class="action-link">
                                        <i class="fas fa-plus"></i> Ajouter un animal
                                    </a>
                                    {% if app.user.association %}
                                        <a href="{{ path('associations_show', {'id': app.user.association.id}) }}" class="action-link">
                                            <i class="fas fa-home"></i> {{ app.user.association.name }}
                                        </a>
                                    {% elseif app.user.associationMembers|length > 0 %}
                                        {% set firstAssociation = app.user.associationMembers|first %}
                                        <a href="{{ path('associations_show', {'id': firstAssociation.association.id}) }}" class="action-link">
                                            <i class="fas fa-home"></i> {{ firstAssociation.association.name }}
                                        </a>
                                    {% else %}
                                        <a href="{{ path('associations') }}" class="action-link">
                                            <i class="fas fa-plus"></i> Ajouter une association
                                        </a>
                                    {% endif %}
                                {% elseif is_granted('ROLE_ASSOCIATION') %}
                                    {# Association manager menu #}
                                    <a href="{{ path('animals_add') }}" class="action-link">
                                        <i class="fas fa-plus"></i> Ajouter un animal
                                    </a>
                                    {% if app.user.association %}
                                        <a href="{{ path('associations_show', {'id': app.user.association.id}) }}" class="action-link">
                                            <i class="fas fa-home"></i> {{ app.user.association.name }}
                                        </a>
                                    {% elseif app.user.associationMembers|length > 0 %}
                                        {% set firstAssociation = app.user.associationMembers|first %}
                                        <a href="{{ path('associations_show', {'id': firstAssociation.association.id}) }}" class="action-link">
                                            <i class="fas fa-home"></i> {{ firstAssociation.association.name }}
                                        </a>
                                    {% endif %}
                                    <a href="{{ path('adopter_news_new') }}" class="action-link">
                                        <i class="fas fa-heart"></i> Partager des nouvelles
                                    </a>
                                {% else %}
                                    {# Regular user menu #}
                                    <a href="{{ path('adopter_news_new') }}" class="action-link">
                                        <i class="fas fa-heart"></i> Partager des nouvelles
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    {% endif %}

                    {# Auth section (right aligned) #}
                    {% if not is_granted('ROLE_USER') %}
                        <a href="{{ path('auth') }}" class="auth-link">
                            <i class="fa-solid fa-sign-in-alt"></i> Connexion / Inscription
                        </a>
                    {% else %}
                        <a href="{{ path('profile') }}" class="auth-link">
                            <i class="fa-solid fa-user"></i> Mon espace
                        </a>
                        <div class="user-disconnect-section">
                            <span class="greeting-text">Bonjour {{ app.user.name }}!</span>
                            <div class="separator"></div>
                            <a href="{{ path('logout') }}" class="auth-link">
                                <i class="fa-solid fa-sign-out-alt"></i> Se déconnecter
                            </a>
                        </div>
                    {% endif %}
                </div>

                {# Bouton menu burger #}
                <button class="burger-menu" id="burgerToggle" aria-label="Menu">
                    <span class="burger-line burger-line-top"></span>
                    <span class="burger-line burger-line-middle"></span>
                    <span class="burger-line burger-line-bottom"></span>
                </button>
            </nav>

            {# Menu mobile #}
            <div class="mobile-menu" id="mobileMenu">
                <div class="mobile-menu-overlay"></div>
                <div class="mobile-menu-content">
                    <div class="mobile-menu-header">
                        <button class="close-menu" id="closeMenu" aria-label="Fermer">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <ul class="mobile-nav-links">
                        <li><a href="{{ path('animals') }}">Nos rescapés</a></li>
                        <li><a href="{{ path('associations') }}">Les associations</a></li>
                    </ul>
                    <div class="mobile-auth-section">
                        {% if not is_granted('ROLE_USER') %}
                            <a href="{{ path('auth') }}" class="mobile-auth-link">
                                <i class="fa-solid fa-sign-in-alt"></i> Connexion / Inscription
                            </a>
                        {% else %}
                            {# Mobile action menu (quick access) #}
                            <button class="mobile-action-toggle" id="mobileActionToggle" type="button">
                                <i class="fas fa-tasks"></i> Accès rapide
                                <i class="fas fa-chevron-down mobile-action-chevron"></i>
                            </button>
                            <div class="mobile-action-menu" id="mobileActionMenu">
                                {% if is_granted('ROLE_ADMIN') %}
                                    {# Admin menu #}
                                    <a href="{{ path('admin') }}" class="mobile-action-link" target="_blank">
                                        <i class="fas fa-cog"></i> Panel Admin
                                    </a>
                                    <a href="{{ path('animals_add') }}" class="mobile-action-link">
                                        <i class="fas fa-plus"></i> Ajouter un animal
                                    </a>
                                    {% if app.user.association %}
                                        <a href="{{ path('associations_show', {'id': app.user.association.id}) }}" class="mobile-action-link">
                                            <i class="fas fa-home"></i> {{ app.user.association.name }}
                                        </a>
                                    {% elseif app.user.associationMembers|length > 0 %}
                                        {% set firstAssociation = app.user.associationMembers|first %}
                                        <a href="{{ path('associations_show', {'id': firstAssociation.association.id}) }}" class="mobile-action-link">
                                            <i class="fas fa-home"></i> {{ firstAssociation.association.name }}
                                        </a>
                                    {% else %}
                                        <a href="{{ path('associations') }}" class="mobile-action-link">
                                            <i class="fas fa-plus"></i> Ajouter une association
                                        </a>
                                    {% endif %}
                                {% elseif is_granted('ROLE_ASSOCIATION') %}
                                    {# Association manager menu #}
                                    <a href="{{ path('animals_add') }}" class="mobile-action-link">
                                        <i class="fas fa-plus"></i> Ajouter un animal
                                    </a>
                                    {% if app.user.association %}
                                        <a href="{{ path('associations_show', {'id': app.user.association.id}) }}" class="mobile-action-link">
                                            <i class="fas fa-home"></i> {{ app.user.association.name }}
                                        </a>
                                    {% elseif app.user.associationMembers|length > 0 %}
                                        {% set firstAssociation = app.user.associationMembers|first %}
                                        <a href="{{ path('associations_show', {'id': firstAssociation.association.id}) }}" class="mobile-action-link">
                                            <i class="fas fa-home"></i> {{ firstAssociation.association.name }}
                                        </a>
                                    {% endif %}
                                    <a href="{{ path('adopter_news_new') }}" class="mobile-action-link">
                                        <i class="fas fa-heart"></i> Partager des nouvelles
                                    </a>
                                {% else %}
                                    {# Regular user menu #}
                                    <a href="{{ path('adopter_news_new') }}" class="mobile-action-link">
                                        <i class="fas fa-heart"></i> Partager des nouvelles
                                    </a>
                                {% endif %}
                            </div>

                            <a href="{{ path('profile') }}" class="mobile-auth-link">
                                <i class="fa-solid fa-user"></i> Mon espace
                            </a>
                            <a href="{{ path('logout') }}" class="mobile-auth-link">
                                <i class="fa-solid fa-sign-out-alt"></i> Se déconnecter
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </header>

        <main>
        {% block body %}{% endblock %}
        </main>

        <footer>
            <div class="footer-wrapper">
                <div class="logo-footer">
                    <a href="{{ path('home') }}"><img src="{{ asset('logo.png') }}" alt="How I Met My Human Logo"></a>
                    <p>Nous contacter</p>
                </div>
                <div class="section-footer">
                    <div class="link-footer left">
                        <h4>Liens utiles</h4>
                        <ul>
                            <li><a href="{{ path('adoption_conditions') }}">Conditions d'adoption</a></li>
                            <li><a href="{{ path('our_team') }}">Notre équipe</a></li>
                            <li><a href="{{ path('become_volunteer') }}">Devenir bénévole</a></li>
                        </ul>
                    </div>
                    <div class="link-footer right">
                        <ul>
                            <li><a href="{{ path('legal_mentions') }}">Mentions légales</a></li>
                            <li><a href="{{ path('legal_privacy') }}">Politique de confidentialité</a></li>
                            <li><a href="{{ path('legal_terms') }}">Conditions générales d'utilisation</a></li>
                        </ul>
                    </div>
                    <div class="contact-footer">
                        <h4>Contact</h4>
                        <ul>
                            <li><i class="fa-solid fa-envelope"></i><button class="contact-btn footer-contact-btn" type="button">Nous contacter</button></li>
                            <li><i class="fa-solid fa-phone"></i>06 06 06 06 06</li>
                        </ul>
                    </div>
                </div>
                <p class="copyright">Copyright&copy; How I Met My Human - 2025. Tous droits réservés.</p>
            </div>
        </footer>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </body>
</html>
