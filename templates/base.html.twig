<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}How I Met My Human{% endblock %}</title>
        <link rel="icon" href="{{ asset('favicon.ico') }}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    
        <header class="main-header">
            <nav class="navbar">
                <div class="logo-section">
                    <div class="logo">
                        <a href="{{ path('home') }}">
                            <img src="{{ asset('logo.png') }}" alt="How I Met My Human Logo">
                        </a>
                    </div>
                    {% if is_granted('ROLE_USER') and app.user %}
                        <div class="user-greeting">
                            <span class="greeting-text">Bonjour {{ app.user.name }}!</span>
                        </div>
                    {% endif %}
                </div>

                <ul class="nav-links">
                    <li><a href="{{ path('animals') }}">Nos rescapés</a></li>
                    <li><a href="{{ path('associations') }}">Les associations</a></li>
                </ul>

                <div class="auth-section">
                    {% if not is_granted('ROLE_USER') %}
                        <a href="{{ path('auth') }}" class="auth-link">
                            <i class="fa-solid fa-sign-in-alt"></i> Connexion / Inscription
                        </a>
                    {% else %}
                        <a href="{{ path('profile') }}" class="auth-link">
                            <i class="fa-solid fa-user"></i> Mon espace
                        </a>
                        <a href="{{ path('adopter_news_new') }}" class="auth-link share-news-btn">
                            <i class="fas fa-heart"></i> Partager des nouvelles
                        </a>
                        {% if is_granted('ROLE_ASSOCIATION') %}
                            <a href="{{ path('animals_add') }}" class="auth-link">
                                <i class="fas fa-plus"></i> Ajouter un animal
                            </a>
                        {% endif %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('admin') }}" target="_blank">Pannel Admin</a>
                        {% endif %}
                        <a href="{{ path('logout') }}" class="auth-link">
                            <i class="fa-solid fa-sign-out-alt"></i> Se déconnecter
                        </a>
                    {% endif %}
                </div>

                {# Bouton menu burger #}
                <button class="burger-menu" id="burgerToggle" aria-label="Menu">
                    <span class="burger-line burger-line-top"></span>
                    <span class="burger-line burger-line-middle"></span>
                    <span class="burger-line burger-line-bottom"></span>
                </button>
            </nav>

            {# Menu mobile #}
            <div class="mobile-menu" id="mobileMenu">
                <div class="mobile-menu-overlay"></div>
                <div class="mobile-menu-content">
                    <div class="mobile-menu-header">
                        <button class="close-menu" id="closeMenu" aria-label="Fermer">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <ul class="mobile-nav-links">
                        <li><a href="{{ path('animals') }}">Nos rescapés</a></li>
                        <li><a href="{{ path('associations') }}">Les associations</a></li>
                    </ul>
                    <div class="mobile-auth-section">
                        {% if not is_granted('ROLE_USER') %}
                            <a href="{{ path('auth') }}" class="mobile-auth-link">
                                <i class="fa-solid fa-sign-in-alt"></i> Connexion / Inscription
                            </a>
                        {% else %}
                            <a href="{{ path('profile') }}" class="mobile-auth-link">
                                <i class="fa-solid fa-user"></i> Mon espace
                            </a>
                            <a href="{{ path('adopter_news_new') }}" class="mobile-auth-link">
                                <i class="fas fa-heart"></i> Partager des nouvelles
                            </a>
                            {% if is_granted('ROLE_ASSOCIATION') %}
                                <a href="{{ path('animals_add') }}" class="mobile-auth-link">
                                    <i class="fas fa-plus"></i> Ajouter un animal
                                </a>
                            {% endif %}
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('admin') }}" class="mobile-auth-link" target="_blank">Pannel Admin</a>
                            {% endif %}
                            <a href="{{ path('logout') }}" class="mobile-auth-link">
                                <i class="fa-solid fa-sign-out-alt"></i> Se déconnecter
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </header>

        <main>
        {% block body %}{% endblock %}
        </main>

        <footer>
            <div class="footer-wrapper">
                <div class="logo-footer">
                    <a href="{{ path('home') }}"><img src="{{ asset('logo.png') }}" alt="How I Met My Human Logo"></a>
                    <p>Nous contacter</p>
                </div>
                <div class="section-footer">
                    <div class="link-footer left">
                        <h4>Liens utiles</h4>
                        <ul>
                            <li><a href="#">Evénements</a></li>
                            <li><a href="#">Conditions d'adoption</a></li>
                            <li><a href="#">Notre équipe</a></li>
                            <li><a href="#">Devenir bénévole</a></li>
                        </ul>
                    </div>
                    <div class="link-footer right">
                        <ul>
                            <li><a href="#">Mentions légales</a></li>
                            <li><a href="#">Politique de confidentialité</a></li>
                            <li><a href="#">Conditions générales d'utilisation</a></li>
                        </ul>
                    </div>
                    <div class="contact-footer">
                        <h4>Contact</h4>
                        <ul>
                            <li><i class="fa-solid fa-envelope"></i>marie.rivier23@gmail.com</li>
                            <li><i class="fa-solid fa-phone"></i>06 06 06 06 06</li>
                        </ul>
                    </div>
                </div>
                <p class="copyright">Copyright&copy; How I Met My Human - 2025. Tous droits réservés.</p>
            </div>
        </footer>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        <script>
            document.addEventListener('DOMContentLoaded', function() {
                const burgerToggle = document.getElementById('burgerToggle');
                const mobileMenu = document.getElementById('mobileMenu');
                const closeMenu = document.getElementById('closeMenu');
                const mobileMenuContent = document.querySelector('.mobile-menu-content');
                const mobileMenuOverlay = document.querySelector('.mobile-menu-overlay');
                const mobileLinks = document.querySelectorAll('.mobile-nav-links a, .mobile-auth-link');

                function toggleMenu() {
                    burgerToggle.classList.toggle('active');
                    mobileMenu.classList.toggle('active');
                    document.body.style.overflow = mobileMenu.classList.contains('active') ? 'hidden' : '';
                }

                function closeMenuHandler() {
                    burgerToggle.classList.remove('active');
                    mobileMenu.classList.remove('active');
                    document.body.style.overflow = '';
                }

                burgerToggle.addEventListener('click', toggleMenu);
                closeMenu.addEventListener('click', closeMenuHandler);
                mobileMenuOverlay.addEventListener('click', closeMenuHandler);

                mobileLinks.forEach(link => {
                    link.addEventListener('click', closeMenuHandler);
                });
            });
        </script>
    </body>
</html>
