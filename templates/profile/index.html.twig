{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="profile-page">
    <div class="container">
        <div class="profile-header">
            <div class="profile-info">
                <div class="profile-avatar">
                    {% if user.imageName %}
                        <img src="{{ vich_uploader_asset(user, 'imageFile') }}" alt="Photo de profil de {{ user.name }}">
                    {% else %}
                        <div class="avatar-placeholder">
                            <i class="fas fa-user"></i>
                        </div>
                    {% endif %}
                </div>
                <div class="profile-details">
                    <h1>{{ user.name }}</h1>
                    <p class="email">{{ user.email }}</p>
                    <div class="profile-actions">
                        <a href="{{ path('profile_edit') }}" class="btn btn-primary">
                            <i class="fas fa-edit"></i>
                            Modifier mon profil
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="profile-content">
            {# Section Association #}
            {% set approvedMembership = null %}
            {% for membership in user.associationMembers %}
                {% if membership.isApproved() %}
                    {% set approvedMembership = membership %}
                {% endif %}
            {% endfor %}

            {% if approvedMembership %}
                <div class="association-section">
                    <h2>Mon Association</h2>
                    <div class="association-card">
                        <div class="association-info">
                            {% if approvedMembership.association.imageName %}
                                <div class="association-logo">
                                    <img src="{{ asset('uploads/images/' ~ approvedMembership.association.imageName) }}" alt="Logo {{ approvedMembership.association.name }}">
                                </div>
                            {% endif %}
                            <div class="association-details">
                                <h3>{{ approvedMembership.association.name }}</h3>
                                <p class="association-role">
                                    {% if approvedMembership.isManager() %}
                                        <i class="fas fa-crown"></i> Gérant
                                    {% else %}
                                        <i class="fas fa-user"></i> Membre
                                    {% endif %}
                                </p>
                                <p class="association-location">
                                    <i class="fas fa-map-marker-alt"></i> {{ approvedMembership.association.codePostal }}
                                </p>
                            </div>
                        </div>
                        <div class="association-actions">
                            <a href="{{ path('associations_show', {id: approvedMembership.association.id}) }}" class="btn btn-outline">
                                <i class="fas fa-eye"></i>
                                Voir l'association
                            </a>
                            <a href="{{ path('animals_add') }}" class="btn btn-secondary">
                                <i class="fas fa-plus"></i>
                                Ajouter un animal
                            </a>
                            {% if approvedMembership.isManager() %}
                                <a href="{{ path('associations_manage', {id: approvedMembership.association.id}) }}" class="btn btn-primary">
                                    <i class="fas fa-cog"></i>
                                    Gérer l'association
                                </a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endif %}

            <div class="favorites-section">
                <h2>Mes Favoris</h2>
                {% if favorites is empty %}
                    <div class="no-favorites">
                        <i class="fas fa-heart-broken"></i>
                        <p>Vous n'avez pas encore d'animaux en favoris.</p>
                        <a href="{{ path('animals') }}" class="btn btn-secondary">
                            <i class="fas fa-search"></i>
                            Découvrir les animaux
                        </a>
                    </div>
                {% else %}
                    <div class="favorites-grid">
                        {% for favorite in favorites %}
                            <div class="favorite-card" data-animal-id="{{ favorite.animals.id }}">
                                <div class="card-image">
                                    {% if favorite.animals.imageName %}
                                        <img src="{{ vich_uploader_asset(favorite.animals, 'imageFile') }}" alt="{{ favorite.animals.name }}">
                                    {% else %}
                                        <div class="image-placeholder">
                                            <i class="fas fa-paw"></i>
                                        </div>
                                    {% endif %}
                                    <button class="favorite-btn favorited" data-animal-id="{{ favorite.animals.id }}">
                                        <i class="fas fa-heart"></i>
                                    </button>
                                </div>
                                <div class="card-content">
                                    <h3>{{ favorite.animals.name }}</h3>
                                    <p class="species">{{ favorite.animals.species.name }}</p>
                                    <p class="age">
                                        {% if 'ans' in favorite.animals.age %}
                                            {{ favorite.animals.age }}
                                        {% else %}
                                            {{ favorite.animals.age }} ans
                                        {% endif %}
                                    </p>
                                    <div class="card-actions">
                                        <a href="{{ path('animal_show', {id: favorite.animals.id}) }}" class="btn btn-outline">
                                            <i class="fas fa-eye"></i>
                                            Voir
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
