{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="profile-page">
    <div class="container">
        <div class="profile-header">
            <div class="profile-info">
                <div class="profile-avatar">
                    {% if user.imageName %}
                        <img src="{{ vich_uploader_asset(user, 'imageFile') }}" alt="Photo de profil de {{ user.name }}">
                    {% else %}
                        <div class="avatar-placeholder">
                            <i class="fas fa-user"></i>
                        </div>
                    {% endif %}
                </div>
                <div class="profile-details">
                    <h1>{{ user.name }}</h1>
                    <p class="email">{{ user.email }}</p>
                    <div class="profile-actions">
                        <a href="{{ path('profile_edit') }}" class="btn btn-primary">
                            <i class="fas fa-edit"></i>
                            Modifier mon profil
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="profile-content">
            <div class="favorites-section">
                <h2>Mes Favoris</h2>
                {% if favorites is empty %}
                    <div class="no-favorites">
                        <i class="fas fa-heart-broken"></i>
                        <p>Vous n'avez pas encore d'animaux en favoris.</p>
                        <a href="{{ path('animals') }}" class="btn btn-secondary">
                            <i class="fas fa-search"></i>
                            DÃ©couvrir les animaux
                        </a>
                    </div>
                {% else %}
                    <div class="favorites-grid">
                        {% for favorite in favorites %}
                            <div class="favorite-card" data-animal-id="{{ favorite.animals.id }}">
                                <div class="card-image">
                                    {% if favorite.animals.imageName %}
                                        <img src="{{ vich_uploader_asset(favorite.animals, 'imageFile') }}" alt="{{ favorite.animals.name }}">
                                    {% else %}
                                        <div class="image-placeholder">
                                            <i class="fas fa-paw"></i>
                                        </div>
                                    {% endif %}
                                    <button class="favorite-btn favorited" data-animal-id="{{ favorite.animals.id }}">
                                        <i class="fas fa-heart"></i>
                                    </button>
                                </div>
                                <div class="card-content">
                                    <h3>{{ favorite.animals.name }}</h3>
                                    <p class="species">{{ favorite.animals.species.name }}</p>
                                    <p class="age">
                                        {% if 'ans' in favorite.animals.age %}
                                            {{ favorite.animals.age }}
                                        {% else %}
                                            {{ favorite.animals.age }} ans
                                        {% endif %}
                                    </p>
                                    <div class="card-actions">
                                        <a href="{{ path('animal_show', {id: favorite.animals.id}) }}" class="btn btn-outline">
                                            <i class="fas fa-eye"></i>
                                            Voir
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
