<div class="contact-modal-content">
    <div class="modal-header-contact">
        <h2>
            <i class="fas fa-envelope"></i>
            {% if animal %}
                Contacter l'association pour {{ animal.name }}
            {% else %}
                Contacter {{ association.name }}
            {% endif %}
        </h2>
        <p class="modal-subtitle">
            {% if animal and animal.association %}
                Message Ã  {{ animal.association.name }}
            {% endif %}
        </p>
    </div>

    {{ form_start(form, {'attr': {'class': 'contact-form-ajax', 'id': 'contact-form'}}) }}
        <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="form-group">
            {{ form_label(form.email) }}
            {{ form_widget(form.email) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="form-group">
            {{ form_label(form.phone) }}
            {{ form_widget(form.phone) }}
            {{ form_errors(form.phone) }}
        </div>

        <div class="form-group">
            {{ form_label(form.message) }}
            {{ form_widget(form.message) }}
            {{ form_errors(form.message) }}
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-submit-contact">
                <i class="fas fa-paper-plane"></i> Envoyer le message
            </button>
        </div>
    {{ form_end(form) }}
</div>

<style>
.contact-modal-content {
    padding: 2rem;
}

.modal-header-contact {
    margin-bottom: 2rem;
    text-align: center;
}

.modal-header-contact h2 {
    color: #1d3557;
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
}

.modal-header-contact h2 i {
    color: #f8c630;
    margin-right: 0.5rem;
}

.modal-subtitle {
    color: #457b9d;
    font-size: 1rem;
}

.contact-form-ajax .form-group {
    margin-bottom: 1.5rem;
}

.contact-form-ajax label {
    display: block;
    margin-bottom: 0.5rem;
    color: #1d3557;
    font-weight: 500;
}

.contact-form-ajax .form-control {
    width: 100%;
    padding: 0.75rem;
    border: 2px solid #e0e0e0;
    border-radius: 8px;
    font-size: 1rem;
    transition: border-color 0.3s ease;
}

.contact-form-ajax .form-control:focus {
    outline: none;
    border-color: #f8c630;
}

.contact-form-ajax textarea.form-control {
    resize: vertical;
    min-height: 120px;
}

.form-errors {
    color: #f67e7d;
    font-size: 0.875rem;
    margin-top: 0.25rem;
}

.form-actions {
    display: flex;
    justify-content: center;
    margin-top: 2rem;
}

.btn-submit-contact {
    background: linear-gradient(135deg, #f8c630 0%, #f8961e 100%);
    color: white;
    padding: 0.875rem 2rem;
    border: none;
    border-radius: 50px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(248, 198, 48, 0.3);
}

.btn-submit-contact:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(248, 198, 48, 0.5);
}

.btn-submit-contact i {
    margin-right: 0.5rem;
}
</style>
