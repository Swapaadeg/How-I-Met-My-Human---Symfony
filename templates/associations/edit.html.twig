{% extends 'base.html.twig' %}

{% block title %}Modifier {{ association.name }}{% endblock %}

{% block body %}
<div class="association-form">
    <div class="container">
        <div class="card">
            <div class="header">
                <h1 class="title">
                    <i class="fas fa-edit"></i>
                    Modifier {{ association.name }}
                </h1>
                <a href="{{ path('associations_show', {id: association.id}) }}" class="back-btn">
                    <i class="fas fa-arrow-left"></i> Retour Ã  l'association
                </a>
            </div>
            
            <div class="body">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                
                <div class="row">
                    <div class="field">
                        {{ form_row(form.name) }}
                    </div>
                    <div class="field">
                        {{ form_row(form.contact_email) }}
                    </div>
                </div>
                
                <div class="row">
                    <div class="field">
                        {{ form_row(form.code_postal) }}
                    </div>
                    <div class="field">
                        {{ form_row(form.department) }}
                    </div>
                </div>
                
                <div class="field">
                    {{ form_row(form.description) }}
                </div>
                
                <div class="field image-field">
                    {% if association.imageName %}
                        <div class="current-image">
                            <p><strong>Image actuelle :</strong></p>
                            <img src="{{ vich_uploader_asset(association, 'imageFile') }}"
                                 alt="{{ association.name }}">
                        </div>
                    {% endif %}
                    {{ form_row(form.imageFile) }}
                </div>
                
                <div class="actions">
                    <a href="{{ path('associations_show', {id: association.id}) }}" class="btn cancel">
                        <i class="fas fa-times"></i> Annuler
                    </a>
                    <button type="submit" class="btn edit">
                        <i class="fas fa-save"></i> Enregistrer les modifications
                    </button>
                </div>
                
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}